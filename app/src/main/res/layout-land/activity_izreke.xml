<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fakeActionBar">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
			<ImageView
			    android:id="@+id/imgNaslovnaTraka"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:contentDescription="@string/dummyDesc"
			    android:layout_alignParentTop="true"
			    android:scaleType="centerCrop"
			    android:src="@drawable/vijest_naslovnaizreke_land"
			    android:adjustViewBounds="true" />
			
			<TextView
		        android:id="@+id/tvNaslov"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignTop="@+id/imgNaslovnaTraka"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:layout_alignRight="@+id/imgPodnaslovnaCrta"
		        android:fontFamily="Arial"
		        android:textColor="#ffffff"
		        android:textStyle="bold"
		        android:ellipsize="end"
			    android:maxLines="2" />
			
			<TextView
		        android:id="@+id/tvKategorija"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/imgNaslovnaTraka"
		        android:layout_marginLeft="15dp"
		        android:layout_marginTop="20dp"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textColor="#4c4c4c"
		        android:fontFamily="Arial" />
			
			<ImageView
		        android:id="@+id/imgPodnaslovnaCrta"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/tvKategorija"
		        android:layout_below="@+id/tvKategorija"
		        android:layout_marginTop="10dp"
		        android:src="@drawable/vijest_podnaslovnalinija_land"
		        android:contentDescription="@string/dummyDesc" />
			
			<ImageView
				android:id="@+id/btnTextPlus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_alignBottom="@+id/imgNaslovnaTraka"
				android:layout_marginBottom="20dp"
				android:layout_marginRight="20dp"
				android:src="@drawable/vijest_button_textplus"
				android:contentDescription="@string/dummyDesc" />
			<!--  
			<TextView
		        android:id="@+id/tvText"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/tvKategorija"
		        android:layout_below="@+id/imgPodnaslovnaCrta"
		        android:layout_marginTop="5dp" />
			-->
			<WebView
		        android:id="@+id/webText"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/tvKategorija"
		        android:layout_below="@+id/imgPodnaslovnaCrta"
		        android:layout_marginTop="5dp"
		        android:layout_marginRight="5dp" />
			
			<ImageView
		        android:id="@+id/btnObnovi"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/webText"
		        android:layout_centerHorizontal="true"
		        android:src="@drawable/button_obnovi"
		        android:contentDescription="@string/dummyDesc"
		        android:layout_marginBottom="5dp">
			</ImageView>
            
        </RelativeLayout>
                
    </ScrollView>
    
    		<RelativeLayout
		    android:id="@+id/fakeActionBar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:orientation="horizontal"
	    android:background="@drawable/vijest_navbgizreke_land" >
		
		    <ImageView
		        android:id="@+id/btnHome"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="20dp"
		        android:contentDescription="@string/dummyDesc"
		        android:src="@drawable/vijest_button_home" />
		    
		    <RelativeLayout 
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_centerHorizontal="true">
			    
			    <ImageView
			        android:id="@+id/btnSearch"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_marginTop="10dp"
			        android:contentDescription="@string/dummyDesc"
			        android:src="@drawable/vijest_button_search" />
			    
			    <ImageView
			        android:id="@+id/btnMail"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_marginTop="10dp"
			        android:layout_below="@+id/btnSearch"
			        android:contentDescription="@string/dummyDesc"
			        android:src="@drawable/vijest_button_mail" />
			    
			    <ImageView
			        android:id="@+id/btnFace"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_marginTop="10dp"
			        android:layout_below="@+id/btnMail"
			        android:contentDescription="@string/dummyDesc"
			        android:src="@drawable/vijest_button_face" />
		    </RelativeLayout>
		    <ImageView 
		        android:id="@+id/btnBack"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentBottom="true"
		        android:paddingBottom="20dp"
		        android:contentDescription="@string/dummyDesc"
		        android:src="@drawable/vijest_button_back" />
	</RelativeLayout>
</RelativeLayout>