<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:background="@drawable/izbornik_btn_normal_propovijedi" >
	
    <TextView
        android:id="@+id/tvNaslov"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/tvNaslov"
        android:textColor="#4c4c4c"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvUvod"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNaslov"
        android:layout_toRightOf="@+id/tvUvodNatpis"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:textColor="#7d7d7d"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tvUvodNatpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tvNaslov"
        android:text="@string/tvUvod"
        android:textColor="#7d7d7d"
        android:textSize="13sp" />
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvNaslov"
        android:layout_marginRight="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDatum"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="14.2"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvGodinaSatMinuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="2014, 14:22"
            android:textColor="#7fffffff"
            android:textSize="@dimen/listaVijestiGodinaSatMinuta" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgViewMp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/dummyDesc"
                android:src="@drawable/izbornik_mp3"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgViewLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/dummyDesc"
                android:src="@drawable/izbornik_link"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgViewTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/dummyDesc"
                android:src="@drawable/izbornik_txt"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>