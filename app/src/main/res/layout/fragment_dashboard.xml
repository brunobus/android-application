<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/horizontalScreenGuideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <android.support.constraint.Guideline
        android:id="@+id/verticalScreenGuideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/btnMolitvenik"
        android:layout_width="120dp"
        android:layout_height="94dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_molitvenik"
        android:gravity="bottom|center_horizontal"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:text="@string/prayerbook"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/btnDuhovnost"
        app:layout_constraintEnd_toStartOf="@+id/verticalScreenGuideline"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/btnBrevijar"
        android:layout_width="120dp"
        android:layout_height="94dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_brevijar"
        android:gravity="bottom|center_horizontal"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:text="@string/breviary"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/btnPjesmarica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/verticalScreenGuideline"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/btnPjesmarica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_mp3"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/songbook"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/btnIzreke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verticalScreenGuideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/btnIzreke"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_izreke"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/quotes"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScreenGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verticalScreenGuideline"
        app:layout_constraintTop_toBottomOf="@+id/btnPjesmarica"/>

    <TextView
        android:id="@+id/btnAktualno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_aktualno"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/trending"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/btnPropovijedi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verticalScreenGuideline"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScreenGuideline"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/btnPropovijedi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_propovjedi"
        android:contentDescription="@string/dummyDesc"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/sermons"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verticalScreenGuideline"
        app:layout_constraintTop_toBottomOf="@+id/btnAktualno"/>

    <TextView
        android:id="@+id/btnDuhovnost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_duhovnost"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/spirituality"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/btnPoziv"
        app:layout_constraintEnd_toStartOf="@+id/verticalScreenGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/btnPoziv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_poziv"
        android:contentDescription="@string/dummyDesc"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/vocation"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScreenGuideline"
        app:layout_constraintEnd_toStartOf="@+id/verticalScreenGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDuhovnost"/>

    <TextView
        android:id="@+id/btnOdgovori"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_odgovori"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/answers"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/btnMultimedia"
        app:layout_constraintEnd_toStartOf="@+id/verticalScreenGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScreenGuideline"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/btnMultimedia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_multimedia"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/multimedia"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/verticalScreenGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOdgovori"/>

    <ImageView
        android:id="@+id/btnCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_evandjelje"
        android:contentDescription="@string/dummyDesc"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScreenGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScreenGuideline"
        tools:targetApi="lollipop"/>

    <ImageView
        android:id="@+id/btnBookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bookmarks"
        android:contentDescription="@string/dummyDesc"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPropovijedi"/>

    <include
        android:id="@+id/radioBtn"
        style="@style/eva_custom_floating_button"
        layout="@layout/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMultimedia"/>

    <include
        android:id="@+id/optionsBtn"
        style="@style/eva_custom_floating_button"
        layout="@layout/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPropovijedi"/>

</android.support.constraint.ConstraintLayout>