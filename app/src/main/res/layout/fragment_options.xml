<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    android:clickable="true"
    android:fillViewport="true"
    android:focusable="true"
    android:overScrollMode="never"
    android:paddingBottom="1dp"
    android:paddingEnd="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingStart="5dp"
    android:paddingTop="1dp"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/barGuide"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/options_menu_line"
            android:contentDescription="@string/dummyDesc"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/imgHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgInfo"/>

        <TextView
            android:id="@+id/imgInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_info"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/info_about"

            app:layout_constraintBottom_toTopOf="@id/imgHelp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/imgHelp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_help"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/help"
            app:layout_constraintBottom_toTopOf="@id/imgTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgInfo"/>

        <TextView
            android:id="@+id/imgTextSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_text"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/text_plus_minus"

            app:layout_constraintBottom_toTopOf="@id/imgChurch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgHelp"/>

        <TextView
            android:id="@+id/imgChurch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_location"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/church"

            app:layout_constraintBottom_toTopOf="@id/imgTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgTextSize"/>

        <TextView
            android:id="@+id/imgTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_theme"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/theme"

            app:layout_constraintBottom_toTopOf="@id/imgShare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgChurch"/>

        <TextView
            android:id="@+id/imgShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_share"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/share"

            app:layout_constraintBottom_toTopOf="@id/imgBookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgTheme"/>

        <TextView
            android:id="@+id/imgBookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bookmark"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/bookmark"

            app:layout_constraintBottom_toTopOf="@id/imgHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgShare"/>

        <TextView
            android:id="@+id/imgHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_home"
            android:contentDescription="@string/dummyDesc"
            android:paddingEnd="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="5dp"
            android:paddingStart="80dp"
            android:text="@string/home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgBookmark"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>