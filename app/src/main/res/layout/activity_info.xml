<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MolitvenikActivity" >
    
	<WebView
		android:id="@+id/webViewInfo"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/fakeActionBarInfo" />

	<RelativeLayout
	   android:id="@+id/fakeActionBarInfo"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:layout_alignParentBottom="true"
	   android:background="@drawable/izbornik_navbgpropovjedi" >

	    <ImageView
	        android:id="@+id/btnSearchListaVijesti"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:contentDescription="@string/dummyDesc"
	        android:src="@drawable/vijest_button_search" />
	
	
	    <ImageView
	        android:id="@+id/btnHomeListaVijesti"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="20dp"
	        android:contentDescription="@string/dummyDesc"
	        android:src="@drawable/vijest_button_home" />
	    
	    <ImageView
	        android:id="@+id/btnBackListaVijesti"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:contentDescription="@string/dummyDesc"
	        android:src="@drawable/vijest_button_back" />
	    
	</RelativeLayout>

</RelativeLayout>