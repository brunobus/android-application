<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaVijestiActivity" >

    <ListView
        android:id="@+id/listViewSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/fakeActionBarSearch" >
    </ListView>
	
		<RelativeLayout
		    android:id="@+id/fakeActionBarSearch"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:background="@drawable/izbornik_navbgpropovjedi" >

		    <ImageView
		        android:id="@+id/btnSearchListaVijesti"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_centerHorizontal="true"
		        android:contentDescription="@string/dummyDesc"
		        android:src="@drawable/vijest_button_search" />


		    <ImageView
		        android:id="@+id/btnHomeListaVijesti"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="@dimen/fakeActionBarParentMargin"
		        android:contentDescription="@string/dummyDesc"
		        android:src="@drawable/vijest_button_home" />
		    
		    <ImageView
		        android:id="@+id/btnBackListaVijesti"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="@dimen/fakeActionBarParentMargin"
		        android:contentDescription="@string/dummyDesc"
		        android:src="@drawable/vijest_button_back" />
		</RelativeLayout>

    
</RelativeLayout>