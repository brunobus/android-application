<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="floating_action_button">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@drawable/background</item>
        <item name="colorPrimaryDark">@drawable/background</item>
        <item name="colorAccent">@color/Orange</item>
        <item name="contentListItemSrc">@drawable/izbornik_btn_normal_propovijedi</item>
        <item name="directoryListItemSrc">@drawable/izbornik_btn_normal_propovijedi_folder</item>
        <item name="listViewHeaderSrc">@drawable/izbornik_top_propovjedi</item>
        <item name="contentTitleBarSrc">@drawable/vijest_naslovnapropovjedi</item>
        <item name="fakeActionBarSrc">@drawable/toolbar_propoviedi</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NovaEva.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NovaEva.TextAppearance.Title.Small" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_size_small</item>
