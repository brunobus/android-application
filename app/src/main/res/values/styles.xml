<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="eva_custom_floating_button">
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/eva_floating_button_margin_start
        </item>
        <item name="android:layout_marginLeft">@dimen/eva_floating_button_margin_start</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/eva_floating_button_margin_end
        </item>
        <item name="android:layout_marginRight">@dimen/eva_floating_button_margin_end</item>
        <item name="android:layout_marginTop">@dimen/eva_floating_button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/eva_floating_button_margin_bottom</item>
    </style>

    <style name="eva_loading_circle" parent="Widget.AppCompat.ProgressBar"/>

    <style name="eva_fragment">
        <item name="android:keepScreenOn">true</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NovaEva.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NovaEva.TextAppearance.Title.Small" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_size_small</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_01</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/novaEva</item>
        <item name="colorPrimaryDark">@color/novaEvaDark</item>
        <item name="colorAccent">@color/novaEvaDark</item>
        <item name="listItemContentSrc">@drawable/list_row_dir_gold</item>
        <item name="listItemFolderSrc">@drawable/list_row_dir_gold</item>
        <item name="directoryHeaderSrc">@drawable/header_gold</item>
        <item name="categoryIconSrc">@drawable/icon_duhovnost</item>
        <item name="contentTitleBarSrc">@drawable/bar_nova_eva</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="LauncherThemeBase" parent="AppTheme">

        <item name="android:windowBackground">@drawable/bitmap_splash</item>
        <item name="colorPrimaryDark">@color/Transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="LauncherTheme" parent="LauncherThemeBase"/>

    <style name="PrayersThemeBase" parent="AppTheme">
        <item name="colorPrimary">@color/VeryDarkGray</item>
        <item name="colorPrimaryDark">@color/Black</item>
