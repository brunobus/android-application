<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NovaEva" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/back</item>
    </style>
    
    <style name="NovaEvaSplash" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    
    <style name="BrevijarMenu" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/brevijar_backbrevijar</item>
    </style>
    
    <style name="ListaVijesti" parent="AppBaseTheme">
    	<item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Vijest" parent="AppBaseTheme">
    	<item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">#ffffff</item>
    </style>
    
    <style name="Brevijar" parent="AppBaseTheme">
        <item name="android:windowNoTitle">false</item>
    </style>
</resources>