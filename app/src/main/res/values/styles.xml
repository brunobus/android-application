<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NovaEva" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>
    
    <style name="NovaEvaSplash" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    
    <style name="BrevijarMenu" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/brevijar_backbrevijar</item>
    </style>
    
    <style name="ListaVijesti" parent="AppTheme">
    	<item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Vijest" parent="AppTheme">
    	<item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">#ffffff</item>
    </style>
    
    <style name="Brevijar" parent="AppTheme">
        <item name="android:windowNoTitle">false</item>
    </style>
</resources>