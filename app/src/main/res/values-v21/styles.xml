<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="eva_floating_action_button" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="eva_loading_circle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:navigationBarColor">@color/Transparent</item>
        <item name="android:statusBarColor">@color/Transparent</item>
    </style>

    <style name="SplashTheme" parent="SplashThemeBase">
        <item name="android:navigationBarColor">@color/Transparent</item>
        <item name="android:statusBarColor">@color/Transparent</item>
    </style>

    <style name="eva_fragment">
        <item name="android:keepScreenOn">true</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>