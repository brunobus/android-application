<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="hr.bpervan.novaeva.main"
          android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name="hr.bpervan.novaeva.NovaEvaApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <receiver android:name="hr.bpervan.novaeva.services.AudioPlayerService$EvaMediaReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <service android:name="hr.bpervan.novaeva.services.AudioPlayerService">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
                <action android:name="android.media.AUDIO_BECOMING_NOISY"/>
                <action android:name="android.media.browse.MediaBrowserService"/>
            </intent-filter>
        </service>

        <activity
            android:name="hr.bpervan.novaeva.activities.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="hr.bpervan.novaeva.activities.PrayerBookActivity"
            android:label="@string/title_activity_molitvenik"/>
        <activity
            android:name="hr.bpervan.novaeva.activities.EvaQuotesActivity"
            android:label="@string/title_activity_izreke"/>
        <activity
            android:name="hr.bpervan.novaeva.activities.SearchActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_search"
            android:noHistory="true"/>
        <activity
            android:name="hr.bpervan.novaeva.activities.ListEvaContentActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_lista_vijesti"/>
        <activity
            android:name="hr.bpervan.novaeva.activities.BookmarksActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_bookmarks"
            android:noHistory="true"/>
        <activity
            android:name="hr.bpervan.novaeva.activities.BreviaryActivity"
            android:label="@string/title_activity_brevijar_predizbor"
            android:theme="@style/BreviaryTheme"/>
        <activity
            android:name="hr.bpervan.novaeva.activities.BreviaryContentActivity"
            android:label="@string/title_activity_brevijar_detalji"
            android:theme="@style/BreviaryTheme"/>
        <activity
            android:name="hr.bpervan.novaeva.activities.EvaContentActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_vijest">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data
                    android:host="novaeva.com"
                    android:pathPrefix="/node"
                    android:scheme="http"/>
                <!-- note that the leading "/" is required for pathPrefix-->
            </intent-filter>
        </activity>
        <!-- keyboardHidden -->
        <activity
            android:name="hr.bpervan.novaeva.activities.InfoActivity"
            android:label="@string/title_activity_info"/>

        <!--<service android:name="hr.bpervan.novaeva.services.AudioPlayerService"/>-->

    </application>

</manifest>